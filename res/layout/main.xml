<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/alarmSetLayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/mainHeader"
    />
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/subHeader"
    />
<TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="   "
    />
    <TextView android:id="@+id/alarmSetFor"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="Wake-time is not set yet"
    />
               
    <Button android:id="@+id/setTimeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Time" />
     

<TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="   "
    />
<TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="Leave yourself a message that will help you get a move-on tomorrow:"
    />
<EditText android:id="@+id/motd"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    />
    
<TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="   "
    />
    
    
     <Button android:id="@+id/setUserAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Alarm" />
    <TextView android:id="@+id/alarmIsSet"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    />
        
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/motdRecapLayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="Did you follow through with your message:"
    /><TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="   "
    /><TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:id="@+id/lastMotd"
    /><TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="   "
    />
      <RadioGroup android:layout_width="fill_parent"
 
                android:layout_height="wrap_content" android:orientation="vertical"
 
                android:id="@+id/group1">
 
                <RadioButton android:checked="false"
 
                        android:text="Yes" android:id="@+id/option1" />
 
                <RadioButton android:checked="false"
 
                        android:text="No" android:id="@+id/option2" />
 
        </RadioGroup>
      <TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="   "
    /><TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="Why, or why not?"
    /><TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="   "
    /><EditText
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:id="@+id/comments"
    android:text="   "
    /><TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="   "
    /><Button
    android:id="@+id/saveRecapBtn"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="Save to Snaptic Log"
    />
</LinearLayout>   
</LinearLayout>